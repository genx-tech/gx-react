{
    "name": "@genx/react",
    "version": "1.0.0",
    "description": "Gen-X React Library (React & React Native)",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "react-native": "src/index.js",
    "source": "src/index.js",
    "scripts": {
        "prettier": "prettier --write . --ignore-unknown",
        "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "eslint --fix --ext .js,.jsx ./src",
        "build": "bob build",
        "release": "release-it",
        "patch": "patch-package",
        "prepare": "husky install && npm run patch",
        "commitlint": "commitlint --edit \"$1\"",
        "start": "npm run build && cd test && npm start"
    },
    "keywords": [
        "react",
        "web",
        "html"
    ],
    "repository": "https://github.com/genx-tech/gx-react",
    "author": "Rockie Guo <rockie@kitmi.com.au> (https://github.com/rockie)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/genx-tech/gx-react/issues"
    },
    "homepage": "https://github.com/genx-tech/gx-react#readme",
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@babel/core": "^7.12.9",
        "@babel/plugin-proposal-export-namespace-from": "^7.14.5",
        "@babel/runtime": "^7.12.5",
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@react-native-community/eslint-config": "^3.0.1",
        "eslint": "7.14.0",
        "husky": "^7.0.2",
        "patch-package": "^6.4.7",
        "prettier": "^2.4.1",
        "react-native-builder-bob": "^0.18.2"
    },
    "peerDependencies": {
        "react": "*",
        "react-intl": "*",
        "react-router-dom": "6"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@react-native-community",
            "plugin:react-hooks/recommended"
        ]
    },
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "dependencies": {
        "@genx/july": "^0.3.2",
        "superagent": "^6.1.0"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module"
        ]
    }
}
