{
    "name": "@genx/react",
    "version": "0.1.0",
    "description": "Gen-X React Library (React & React Native)",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "build": "bob build",
        "release": "release-it",
        "example": "yarn --cwd example",
        "prettier": "prettier --write .",
        "web": "npm run build && cd web-example && npm start"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/genx-tech/gx-react",
    "author": "Rockie Guo <rockie@kitmi.com.au> (https://github.com/rockie)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/genx-tech/gx-react/issues"
    },
    "homepage": "https://github.com/genx-tech/gx-react#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^11.0.0",
        "@material-ui/core": "^4.11.2",
        "@react-native-community/eslint-config": "^2.0.0",
        "@release-it/conventional-changelog": "^2.0.0",
        "antd": "^4.9.4",
        "bootstrap": "^4.5.3",
        "commitlint": "^11.0.0",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react-hooks": "^4.2.0",
        "galio-framework": "^0.7.1",
        "husky": "^4.2.5",
        "mobx": "^6.0.4",
        "mobx-react": "^7.0.5",
        "pod-install": "^0.1.0",
        "prettier": "^2.0.5",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",        
        "react-native": "^0.63.4",
        "react-native-builder-bob": "^0.17.1",
        "react-native-web": "^0.14.10",
        "reactstrap": "^8.8.1",
        "release-it": "^14.2.2"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*",
        "react-native": "*"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npm run lint"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@react-native-community",
            "plugin:react-hooks/recommended"
        ]
    },
    "eslintIgnore": [
        "example/",
        "web-example/",
        "node_modules/",
        "lib/"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module"
        ]
    },
    "dependencies": {
        "react-intl": "^5.10.9",
        "react-error-boundary": "^3.1.0"
    }
}
